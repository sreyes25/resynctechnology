---
const primaryCta = "/#contact";
const secondaryCta = "/#services";
---

<section class="hero-wrap">
  <!-- Background video -->
  <div class="hero-bg">
    <video
      class="hero-video"
      autoplay
      muted
      loop
      playsinline
      preload="metadata"
    >
      <source src="/hero-orb.webm" type="video/webm" />
      <source src="/vid4.mp4" type="video/mp4" />
    </video>
  </div>

  <!-- Layered glows -->
  <div class="hero-overlay hero-overlay-top"></div>
  <div class="hero-overlay hero-overlay-bottom"></div>
  <div class="hero-overlay hero-overlay-radial"></div>
  <div class="hero-overlay hero-overlay-warm"></div>
  <div class="hero-overlay hero-overlay-left"></div>

  <div class="hero-shell">
    <div class="hero-grid">
      <div class="hero-copy">
        <p class="hero-eyebrow">NYC Software Development</p>
        <h1 class="hero-title">
         Resyncing Technology<br class="hidden sm:block" />
         of the Future
        </h1>
        <p class="hero-sub">
          We help New York City Businesses adapt, automate, and thrive in a rapidly changing technology landscape. From AI-ready workflows to custom apps and automated systems.
        </p>

        <div class="hero-logos">
          <p class="hero-logos-label">Building Modern Technology</p>
          <div class="hero-logos-row">
            <span>Apps</span>
            <span>Websites</span>
            <span>Automation</span>
          </div>
        </div>

        <div class="hero-ctas">
          <a href={primaryCta} class="rt-btn-primary">
            <span class="cta-glow"></span>
            Start a Project
          </a>
          <a href={secondaryCta} class="cta-secondary">
            Explore our services <span aria-hidden="true">â€º</span>
          </a>
        </div>
      </div>


    </div>
  </div>
</section>

<style>
  .hero-wrap{
    position: relative;
    overflow: hidden;
    color: white;
    min-height: min(65vh, 1100px);
    background: #06060a81;
    padding-top: 3%;
  }
  .hero-bg{
    position: absolute;
    inset: 0;
    z-index: -3;
  }
  .hero-video{
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0.85;
    filter: saturate(1.1);
  }
  .hero-overlay{
    position: absolute;
    inset: 0;
    z-index: -2;
  }
  .hero-overlay-top{
    background: linear-gradient(180deg, rgba(0,0,0,0.85), rgba(0,0,0,0.45));
  }
  .hero-overlay-bottom{
    background: linear-gradient(0deg, rgba(0,0,0,0.65), rgba(0,0,0,0));
    mask-image: linear-gradient(0deg, rgba(0,0,0,1), rgba(0,0,0,0));
  }
  .hero-overlay-radial{
    background: radial-gradient(circle at 30% 35%, rgba(70,70,85,0.45), rgba(0,0,0,0));
  }
  .hero-overlay-warm{
    background: radial-gradient(circle at 80% 20%, rgba(255,170,90,0.38), rgba(0,0,0,0));
  }
  .hero-overlay-left{
    background: linear-gradient(90deg, rgba(0,0,0,0.75), rgba(0,0,0,0));
    mask-image: linear-gradient(90deg, rgba(0,0,0,1), rgba(0,0,0,0));
  }

  .hero-shell{
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: clamp(2.5rem, 6vw, 3.5rem) clamp(1.2rem, 4vw, 2.5rem) clamp(2rem, 8vw, 3.5rem);
  }

  .hero-grid{
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(2rem, 6vw, 3rem);
    align-items: center;
  }

  .hero-copy{
    max-width: 640px;
  }
  .hero-eyebrow{
    text-transform: uppercase;
    letter-spacing: 0.16em;
    font-weight: 800;
    font-size: 12px;
    color: #ff3c3c;
  }
  .hero-title{
    margin-top: clamp(0.75rem, 2vw, 1.4rem);
    font-size: clamp(2.6rem, 5vw, 3.9rem);
    line-height: 1.1;
    font-weight: 800;
    letter-spacing: -0.02em;
    text-shadow: 0 12px 30px rgba(0,0,0,0.35);
  }
  .hero-sub{
    margin-top: 1rem;
    max-width: 560px;
    font-size: clamp(1rem, 2vw, 1.15rem);
    color: rgba(255,255,255,0.75);
    line-height: 1.6;
  }

  .hero-logos{
    margin-top: clamp(1.6rem, 3vw, 2rem);
  }
  .hero-logos-label{
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: rgba(255,255,255,0.6);
  }
  .hero-logos-row{
    margin-top: 0.75rem;
    display: flex;
    gap: clamp(1.2rem, 3vw, 2rem);
    align-items: center;
    font-size: 1rem;
    font-weight: 700;
    color: rgba(255,255,255,0.82);
  }

  .hero-ctas{
    margin-top: clamp(1.8rem, 3vw, 2.2rem);
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
  }

  .hero-visual{
    position: relative;
    width: min(520px, 80vw);
    justify-self: center;
    aspect-ratio: 1;
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.65));
  }
  .hero-visual-glow{
    position: absolute;
    inset: -12%;
    background: radial-gradient(circle, rgba(150,255,255,0.12), rgba(0,0,0,0));
    filter: blur(14px);
    z-index: 0;
  }
  .hero-visual-circle{
    position: absolute;
    inset: 0;
    border-radius: 50%;
    border: 1px solid rgba(255,255,255,0.14);
    opacity: 0.6;
    z-index: 1;
  }
  .hero-visual-img{
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  @media (min-width: 1024px){
    .hero-grid{
      grid-template-columns: 1.1fr 0.9fr;
      gap: 3rem;
    }
    .hero-visual{
      width: 520px;
      margin-left: auto;
    }
  }

  @media (max-width: 639px){
    .hero-wrap{
      min-height: auto;
      padding-bottom: 1rem;
    }
    .hero-shell{
      padding-top: calc(72px + 1.2rem);
    }
    .hero-logos-row{
      gap: 1.4rem;
      flex-wrap: wrap;
    }
    .hero-ctas{
      flex-direction: column;
      align-items: stretch;
    }
    .rt-btn-primary,
    .cta-secondary{
      width: 100%;
      justify-content: center;
    }
    .hero-visual{
      width: min(340px, 80vw);
      margin-top: 0.5rem;
    }
  }
</style>
