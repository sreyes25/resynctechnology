---
const primaryCta = "/#contact";
const secondaryCta = "/#services";
---

<section class="hero-wrap">
  <!-- Layered background -->
  <div class="hero-bg"></div>

  <!-- Layered glows -->
  <div class="hero-overlay hero-overlay-top"></div>
  <div class="hero-overlay hero-overlay-bottom"></div>
  <div class="hero-overlay hero-overlay-radial"></div>
  <div class="hero-overlay hero-overlay-warm"></div>
  <div class="hero-overlay hero-overlay-left"></div>

  <div class="hero-shell">
    <div class="hero-grid">
      <div class="hero-copy">
        <p class="hero-eyebrow">NYC Software Development</p>
        <h1 class="hero-title">
         Synchronizing<br class="hidden sm:block" />
         Technology<br class="hidden sm:block" />
         For the Future
        </h1>
        <p class="hero-sub">
          At Resync, we help businesses modernize, integrate, and build software that fits the way you operate.
        </p>

        <div class="hero-logos">
          <p class="hero-logos-label">Building Modern Technology</p>
          <div class="hero-logos-row">
            <span class="hero-logo-item">
              <img src="/services/app.svg" alt="" class="hero-logo-icon" loading="lazy" />
              Apps
            </span>
            <span class="hero-logo-item">
              <img src="/services/web.svg" alt="" class="hero-logo-icon" loading="lazy" />
              Websites
            </span>
            <span class="hero-logo-item">
              <img src="/services/automate.svg" alt="" class="hero-logo-icon" loading="lazy" />
              Automation
            </span>
          </div>
        </div>

        <div class="hero-ctas">
          <a href={primaryCta} class="rt-btn-primary">
            <span class="cta-glow"></span>
            Resync Project
          </a>
          <a href={secondaryCta} class="cta-secondary">
            Explore our services <span aria-hidden="true">â€º</span>
          </a>
        </div>
      </div>


    </div>
  </div>
</section>

<style>
  .hero-wrap{
    position: relative;
    overflow: hidden;
    color: white;
    min-height: min(65vh, 1100px);
    background: linear-gradient(180deg, rgb(34 0 7) 0%, rgb(136 0 26 / 51%) 5%, rgba(58, 12, 22, 0.9) 20%, rgba(20, 10, 14, 0.8) 56%, rgba(6, 3, 5, 0.92) 92%, rgba(3, 2, 4, 0.98) 100%);
    padding-top: 3%;
  }
  .hero-bg{
    position: absolute;
    inset: -3% -2% -6%;
    z-index: -3;
    pointer-events: none;
    background:
      radial-gradient(circle at 24% 24%, rgba(255, 76, 76, 0.32), rgba(0,0,0,0)),
      radial-gradient(circle at 78% 20%, rgba(255, 122, 90, 0.26), rgba(0,0,0,0)),
      radial-gradient(120% 120% at 50% 102%, rgba(32, 12, 16, 0.65), rgba(4,3,5,0.95)),
      linear-gradient(180deg, #1c0c12 0%, #0f070b 32%, #080509 58%, #040305 100%);
    filter: saturate(1.05);
  }
  .hero-bg::after{
    content: "";
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(90deg, rgba(255,120,120,0.04) 1px, transparent 1px),
      linear-gradient(0deg, rgba(255,120,120,0.04) 1px, transparent 1px),
      radial-gradient(circle at 50% 96%, rgba(255, 64, 64, 0.16), rgba(0,0,0,0));
    background-size: 140px 140px, 140px 140px, cover;
    mix-blend-mode: soft-light;
    opacity: 0.5;
  }
  .hero-overlay{
    position: absolute;
    inset: 0;
    z-index: -2;
  }
  .hero-overlay-top{
    background: linear-gradient(180deg, rgba(12,6,8,0.82), rgba(12,6,8,0.48));
  }
  .hero-overlay-bottom{
    background:
      radial-gradient(140% 120% at 50% 0%, rgba(26,10,15,0.6), transparent 36%, rgba(0,0,0,0.86)),
      linear-gradient(180deg, rgba(4,3,5,0) 0%, rgba(4,3,5,0.72) 60%, rgba(3,2,4,0.94) 100%);
    mask-image: linear-gradient(0deg, rgba(0,0,0,1), rgba(0,0,0,0.08));
  }
  .hero-overlay-radial{
    background: radial-gradient(circle at 30% 32%, rgba(255,60,90,0.24), rgba(0,0,0,0));
  }
  .hero-overlay-warm{
    background: radial-gradient(circle at 76% 22%, rgba(255,120,90,0.3), rgba(0,0,0,0));
  }
  .hero-overlay-left{
    background: linear-gradient(90deg, rgba(0,0,0,0.7), rgba(0,0,0,0.05));
    mask-image: linear-gradient(90deg, rgba(0,0,0,0.85), rgba(0,0,0,0));
  }

  .hero-shell{
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: clamp(2.5rem, 6vw, 3.5rem) clamp(1.2rem, 4vw, 2.5rem) clamp(2rem, 8vw, 3.5rem);
  }

  .hero-grid{
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(2rem, 6vw, 3rem);
    align-items: center;
  }

  .hero-copy{
    max-width: 640px;
  }
  .hero-title{
    margin-top: clamp(0.75rem, 2vw, 1.4rem);
    font-size: clamp(2.6rem, 5vw, 3.9rem);
    line-height: 1.1;
    font-weight: 800;
    letter-spacing: -0.02em;
    text-shadow: 0 12px 30px rgba(0,0,0,0.35);
  }
  .hero-sub{
    margin-top: 1rem;
    max-width: 560px;
    font-size: clamp(1rem, 2vw, 1.15rem);
    color: rgba(255,255,255,0.75);
    line-height: 1.6;
  }

  .hero-logos{
    margin-top: clamp(1.6rem, 3vw, 2rem);
  }
  .hero-logos-label{
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: rgba(255,255,255,0.6);
  }
  .hero-logos-row{
    margin-top: 0.75rem;
    display: flex;
    gap: clamp(1.2rem, 3vw, 2rem);
    align-items: center;
    font-size: 1rem;
    font-weight: 700;
    color: rgba(255,255,255,0.82);
  }
  .hero-logo-item{
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
  }
  .hero-logo-icon{
    width: 20px;
    height: 20px;
  }

  .hero-ctas{
    margin-top: clamp(1.8rem, 3vw, 2.2rem);
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
  }

  .hero-visual{
    position: relative;
    width: min(520px, 80vw);
    justify-self: center;
    aspect-ratio: 1;
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.65));
  }
  .hero-visual-glow{
    position: absolute;
    inset: -12%;
    background: radial-gradient(circle, rgba(150,255,255,0.12), rgba(0,0,0,0));
    filter: blur(14px);
    z-index: 0;
  }
  .hero-visual-circle{
    position: absolute;
    inset: 0;
    border-radius: 50%;
    border: 1px solid rgba(255,255,255,0.14);
    opacity: 0.6;
    z-index: 1;
  }
  .hero-visual-img{
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  @media (min-width: 1024px){
    .hero-grid{
      grid-template-columns: 1.1fr 0.9fr;
      gap: 3rem;
    }
    .hero-visual{
      width: 520px;
      margin-left: auto;
    }
  }

  @media (max-width: 639px){
    .hero-wrap{
      min-height: auto;
      padding-bottom: 1rem;
    }
    .hero-shell{
      padding-top: calc(72px + 1.2rem);
    }
    .hero-logos-row{
      gap: 1.4rem;
      flex-wrap: wrap;
    }
    .hero-ctas{
      flex-direction: column;
      align-items: stretch;
    }
    .rt-btn-primary,
    .cta-secondary{
      width: 100%;
      justify-content: center;
    }
    .hero-visual{
      width: min(340px, 80vw);
      margin-top: 0.5rem;
    }
  }
</style>
